@{
    ViewData["Title"] = "Home Page";
}


<div class="container-xxl">
    <div class="d-flex justify-content-between mb-2">
        <h3 class="">Visitors  Report</h3>
        <button onclick="ExportToExcel()" class="btn btn-sm btn-primary mx-4 px-3 h-50 mt-2">Export</button>
    </div>

    <table id="datatable" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>Provice Name</th>
                <th># of Doses</th>
                <th>Visitor Count</th>
                <th>Card Type</th>
                @*<th>Action</th>*@
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/VaccinationRecords/Get',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var index = 1;
                    data.forEach(function (i) {
                       // console.log(i);
                            $('#datatable').DataTable().row.add([
                            index,
                            i.provinceName,
                            i.doseReceived,
                            i.customersCount,
                            "MOH" + " : " + i.cardTypes.moh + ", MOD : " + i.cardTypes.mod,
                            //null
                            ]).draw(false);
                            index++;
                    });
                },
                error: function (error) {
                    console.error('Error fetching data:', error);
                }
            });
        });
        const ExportToExcel = () => {
        let table = document.getElementById("datatable");
        TableToExcel.convert(table, {
            name: "Summary visitors.xlsx", 
            sheet: {
                    name: "Summary visitors report",
            },
        });
        }
        
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
}
